[flake8]
ignore =
    E203, E266, E501, W503, F403,
    # E704: Multiple statements on one line (def)
    E704,
    # E722: do not use bare 'except'
    E722
per-file-ignores = __init__.py:F401
max-line-length = 120
max-complexity = 30
select = B, C, E, F, W, T4, B9
exclude = .git,.venv,__pycache__,docs,build,dist